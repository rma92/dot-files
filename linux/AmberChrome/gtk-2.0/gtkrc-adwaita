# Based on Bridge by ScionicSpectre
# vim:set ts=2 sw=2 sts=2 ai et:
#
# This is the GTK+ 2 version of Adwaita. It's whole purpose is to look as the
# GTK+ 3 version as much as possible until GTK+ 2 dies completely.
#
# Note: comments for explaining styles are on the bottom of each file beside the
# widget matches.

# Declare the colours used throughout the theme.
# There shouldn't be any fiddling with them in the theme files themselves in
# order to not mess up the dark theme.

# Text/base
gtk-color-scheme = "text_color:#e69a2e\nbase_color:#2b2c2b"
# Foreground/background
gtk-color-scheme = "fg_color:#e69a2e\nbg_color:#353836"
#Â Selected foreground/background
gtk-color-scheme = "selected_fg_color:black\nselected_bg_color:#ffaf40"
# Insensitive foreground/background
gtk-color-scheme = "insensitive_fg_color:#a66f21\ninsensitive_bg_color:#434644"
# Menus
gtk-color-scheme = "menu_color:#2b2c2b"
# Links
gtk-color-scheme = "link_color:#199fff\nvisited_link_color:#902bd9"
# Treeview headers
gtk-color-scheme = "column_header_color:#353836\nhover_column_header_color:#636769"
# Window decoration
gtk-color-scheme = "window_color:#e69a2e"
# Tooltips
gtk-color-scheme = "tooltip_fg_color:white\ntooltip_bg_color:black"

# Set GTK settings
gtk-auto-mnemonics              = 1
gtk-primary-button-warps-slider = 1
gtk-icon-sizes		            = "gtk-button=16,16" # This makes button icons smaller.

# And hand over the control to the theme files
include "main.rc"
include "apps.rc"
include "hacks.rc"
include "panel.rc"
